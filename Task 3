<body>
  <div class="header">
    <h1>ðŸŽ­ Joke Machine</h1>
  </div>

  <div class="carousel">
    <img src="https://via.placeholder.com/600x200/FF6B6B/FFFFFF?text=ðŸ˜‚+Comedy" class="active" alt="Comedy">
    <img src="https://via.placeholder.com/600x200/4ECDC4/FFFFFF?text=ðŸ¤£+Humor" alt="Humor">
    <img src="https://via.placeholder.com/600x200/45B7D1/FFFFFF?text=ðŸ˜„+Jokes" alt="Jokes">
  </div>

  <div class="joke-box">
    <h2>Daily Jokes</h2>
    <div class="counter">Jokes: <span id="count">0</span></div>
    <div class="joke-text" id="joke">Click the button to get a joke!</div>
    <button class="joke-btn" id="btn" onclick="getJoke()">Get New Joke</button>
  </div>

  <script>
    let slideIndex = 0;
    let jokeCount = 0;
    let isLoading = false;
    
    const images = document.querySelectorAll('.carousel img');
    
    // Carousel auto-slide
    setInterval(() => {
      images[slideIndex].classList.remove('active');
      slideIndex = (slideIndex + 1) % images.length;
      images[slideIndex].classList.add('active');
    }, 3000);

    // Fetch joke function
    async function getJoke() {
      if (isLoading) return;
      
      isLoading = true;
      const jokeEl = document.getElementById('joke');
      const btnEl = document.getElementById('btn');
      const countEl = document.getElementById('count');
      
      jokeEl.textContent = 'Loading...';
      btnEl.disabled = true;
      btnEl.textContent = 'Loading...';
      
      try {
        const response = await fetch('https://official-joke-api.appspot.com/random_joke');
        
        if (!response.ok) {
          throw new Error('Network error');
        }
        
        const data = await response.json();
        
        // Check if we got valid joke data
        if (!data.setup || !data.punchline) {
          throw new Error('Invalid joke data');
        }
        
        setTimeout(() => {
          jokeEl.innerHTML = '<strong>' + data.setup + '</strong><br>ðŸ˜‚ ' + data.punchline;
          jokeCount++;
          countEl.textContent = jokeCount;
          btnEl.disabled = false;
          btnEl.textContent = 'Get Another Joke';
          isLoading = false;
        }, 500);
        
      } catch (error) {
        console.error('Joke fetch error:', error);
        setTimeout(() => {
          // Provide a fallback joke
          jokeEl.innerHTML = '<strong>Why don\'t scientists trust atoms?</strong><br>ðŸ˜‚ Because they make up everything!';
          jokeCount++;
          countEl.textContent = jokeCount;
          btnEl.disabled = false;
          btnEl.textContent = 'Get Another Joke';
          isLoading = false;
        }, 500);
      }
    }
  </script>
</body>
